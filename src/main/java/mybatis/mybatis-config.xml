<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>
	<!-- autoMappingBehavior should be set in each test case -->
	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC" />
			<dataSource type="POOLED">
				<property name="driver" value="oracle.jdbc.driver.OracleDriver" />
				<property name="url" value="jdbc:oracle:thin:@localhost:1521:XE" />
				<property name="username" value="hr" />
				<property name="password" value="hr" />
			</dataSource>
		</environment>
	</environments>
	<mappers>
		<!-- ShopProduct -->
		<mapper resource="mybatis/ProductMapper.xml"/>
		
		<!-- ShopInterest -->
		<mapper resource="mybatis/InterestMapper.xml"/>
		
		<!-- ShopCart -->
		<mapper resource="mybatis/CartMapper.xml"/>
		
		<!-- ShopWiki -->
		<mapper resource="mybatis/WikiMapper.xml"/>
		
		<!-- ShopBuy -->
		<mapper resource="mybatis/BuyMapper.xml"/>
		
		<!-- Notification -->
		<mapper resource="mybatis/NotificationMapper.xml"/>
		
		<!-- User -->
		<mapper resource="mybatis/UserMapper.xml"/>
	</mappers>
</configuration>
